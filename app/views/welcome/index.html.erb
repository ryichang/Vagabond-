
<section id='splash'class='intro'>
  <div id='welcome' class="container content">
    <div class="row">
      
      <div class="col-sm-6">
        <%= image_tag ('splash.gif'), class: "img-responsive"%>
      </div>

      <div id='splash_content' class="col-sm-6">
        <h1>Travel Chatter</h1>
        <h3>A place for people to leave posts about places they have been, things they have seen or things they have done around the world.</h3>
        <!-- TODO change to link to sign up page -->
        <%= button_to "Sign Up", new_user_path, class:"btn btn-default", method: :get %>
        <p class="btn">Join the chatter and make an account</p>
      </div>
    </div>
  </div> 
</section> 

<section>
  <div class="container">
  <h2>Cities people are talking about:</h2>
    <div class="row ">  
      <% @cities.each do |city| %>
        <div class="col-sm-3 city_display">
          <div class="thumbnail img-responsive">
          <%= link_to city_path(city) do %>
            <img src="<%=city.image%>" >
          <%end%>
               <center><h3><%=city.name%></h3></center>
              <div  class="caption">
                <p align="right"><%= link_to "View City", city_path(city) %> </p>
              </div>
          </div>
        </div>
      <% end %>
    </div> 
  </div> 
</section>  


<section>
    <div id="splash_map" class="row">

      <div class="col-sm-8">
        <div id="map"> 
        </div>
      </div>

      <div class="col-sm-4">
        <div class="well">
        <h5>looking for a specific city?</h5>

          <!-- TODO: add google Querry form -->
        </div>
      </div>
    
    </div>
</section>


    

    

